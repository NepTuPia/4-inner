<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/todayClassFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TodayClassFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/todayClass2Txt"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:background="@drawable/button_rounded"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/todayClass3Txt"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/todayClass1Txt"
        app:layout_constraintTop_toTopOf="@+id/todayClass1Txt" />

    <Button
        android:id="@+id/todayClass1Txt"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_rounded"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayClassFragmentTitleTxt" />

    <Button
        android:id="@+id/todayClass3Txt"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_rounded"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/todayClass2Txt" />

    <TextView
        android:id="@+id/todayClassFragmentTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Today's Class"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noClassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="No class today!"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayClassFragmentTitleTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>