<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF0000"/> <!-- 빨간색 원 -->
            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>
    <item android:top="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- 빨간색 직사각형 -->
            <size
                android:width="2dp"
                android:height="10dp"/>
        </shape>
    </item>
</layer-list>
